<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Verify OTP | V-Shop</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
    <style>
        body {
            background: linear-gradient(135deg, #fbbf3b, #eb543b);
            height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            font-family: 'Poppins', sans-serif;
            margin: 0;
        }
        .verify-container {
            background: rgba(255, 255, 255, 0.9);
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.2);
            max-width: 450px;
            width: 100%;
            animation: fadeIn 1s ease-in-out;
        }
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(-20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .verify-container h2 {
            color: #333;
            font-weight: 700;
            margin-bottom: 20px;
            text-align: center;
        }
        .verify-container p {
            color: #666;
            margin-bottom: 30px;
            text-align: center;
        }
        .form-control {
            border-radius: 10px;
            padding: 12px;
            border: 1px solid #ddd;
            transition: all 0.3s ease;
        }
        .form-control:focus {
            border-color: #eb543b;
            box-shadow: 0 0 8px rgba(235, 84, 59, 0.3);
        }
        .btn-custom {
            background: linear-gradient(45deg, #eb543b, #fbbf3b);
            color: white;
            border: none;
            padding: 12px;
            border-radius: 10px;
            font-weight: 600;
            transition: all 0.3s ease;
            width: 100%;
        }
        .btn-custom:hover {
            background: linear-gradient(45deg, #fbbf3b, #eb543b);
            transform: translateY(-2px);
        }
        .error {
            color: red;
            font-size: 0.9rem;
            margin-top: 5px;
        }
        .timer {
            font-size: 1rem;
            color: red;
            font-weight: 500;
        }
        header {
            width: 100%;
            padding: 15px 0;
            text-align: center;
            position: fixed;
            top: 0;
            z-index: 1000;
        }
        header h1 {
            color: white;
            margin: 0;
            font-size: 1.8rem;
            font-weight: bold;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
        }
        .btn-link {
            color: #eb543b;
            text-decoration: none;
            font-weight: 500;
            transition: color 0.3s ease;
        }
        .btn-link:hover {
            color: #fbbf3b;
        }
    </style>
</head>
<body>
    <header>
        <h1>V-Shop</h1>
    </header>
    <div class="container d-flex justify-content-center align-items-center flex-grow-1">
        <div class="verify-container">
            <h2>Verify OTP</h2>
            <p>Enter the OTP sent to your email</p>
            <form id="verifyOtpForm" action="/verify-otp" method="post">
                <input type="hidden" name="email" value="<%= email %>">
            
                <div class="mb-3">
                    <label for="otp" class="form-label">OTP:</label>
                    <input type="text" id="otp" name="otp" class="form-control" placeholder="Enter OTP" required>
                    <span id="otpError" class="error"></span>
                </div>
            
                <button type="submit" class="btn btn-custom">Verify OTP</button>
            
                <div class="d-flex justify-content-between pt-3">
                    <span class="timer" id="timer">60</span> seconds remaining
                    <button type="button" id="resendOtp" class="btn btn-link" disabled onclick="resendOtp()">Resend OTP</button>
                </div>
            </form>          
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    <script>
        function startTimer() {
            let timeLeft = 60;
            const timerElement = document.getElementById("timer");
            const resendButton = document.getElementById("resendOtp");

            const countdown = setInterval(() => {
                timeLeft--;
                timerElement.textContent = timeLeft;
                if (timeLeft === 0) {
                    clearInterval(countdown);
                    resendButton.removeAttribute("disabled");
                }
            }, 1000);
        }

        function resendOtp() {
            const email = "<%= email %>";

            fetch("/resend-otp", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ email })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    Toastify({ text: "OTP resent successfully!", backgroundColor: "green" }).showToast();
                    startTimer();
                    document.getElementById("resendOtp").setAttribute("disabled", "true");
                } else {
                    Toastify({ text: data.message || "Failed to resend OTP", backgroundColor: "red" }).showToast();
                }
            })
            .catch(error => {
                console.error("Error resending OTP:", error);
                Toastify({ text: "An error occurred. Please try again.", backgroundColor: "red" }).showToast();
            });
        }

        startTimer(); // Start countdown on page load
    </script>
</body>
</html>
