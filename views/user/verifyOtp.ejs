<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Verify OTP</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body {
      background: linear-gradient(45deg, #eb543b, #fbbf3b);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .card {
      border: none;
      border-radius: 15px;
      overflow: hidden;
      animation: scaleIn 0.5s ease-in-out;
    }
    @keyframes scaleIn {
      from { transform: scale(0.9); opacity: 0; }
      to { transform: scale(1); opacity: 1; }
    }
    .btn-custom {
      background-color: #eb543b;
      color: white;
      transition: all 0.3s ease;
    }
    .btn-custom:hover {
      background-color: #d94933;
      transform: translateY(-2px);
    }
    .header-custom {
      background-color: #eb543b;
      color: white;
    }
    .alert-custom {
      background-color: #f8d7da;
      color: #721c24;
    }
    .timer-circle {
      width: 100px;
      height: 100px;
      margin: 20px auto;
      position: relative;
    }
    .timer-circle svg {
      width: 100%;
      height: 100%;
      transform: rotate(-90deg);
    }
    .timer-circle circle {
      fill: none;
      stroke: #eb543b;
      stroke-width: 8;
      stroke-dasharray: 283;
      stroke-dashoffset: 283;
      transition: stroke-dashoffset 1s linear;
    }
    .timer-text {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      font-size: 1.5rem;
      color: #eb543b;
    }
  </style>
  <!-- Toastify CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
</head>

<body>
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card shadow-lg rounded-3">
          <div class="card-header header-custom text-center">
            <h3>Verify OTP</h3>
          </div>
          <div class="card-body">
            <!-- Verify OTP Form -->
            <form action="/verifyOtp" method="POST" id="verifyOtpForm">
              <input type="hidden" name="email" value="<%= email %>" />
              <div class="mb-3">
                <label for="otp" class="form-label">Enter OTP</label>
                <input type="text" id="otp" class="form-control" name="otp" id="otp" required />
              </div>
              <button type="submit" id="verifyBtn" class="btn btn-custom btn-block w-100">Verify OTP</button>
            </form>

            <!-- Resend OTP Form -->
            <form action="/resendOtp" method="POST" id="resendOtpForm" style="display: none;">
              <input type="hidden" name="email" value="<%= email %>">
              <button type="submit" id="resendBtn" class="btn btn-secondary w-100 mt-3">Resend OTP</button>
            </form>

            <!-- Timer -->
            <div class="timer-circle">
              <svg>
                <circle r="45" cx="50" cy="50"></circle>
              </svg>
              <div class="timer-text" id="timer">60</div>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Load Toastify before using it -->
  <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>

  <% if (signerr) { %>
    <script>
      window.onload = function() {
        Toastify({
          text: "<%= signerr %>",
          duration: 3000,  
          close: true,
          gravity: "top",
          position: "right",
          backgroundColor: "red",  
        }).showToast();
      };
    </script>
  <% } %>
  <!-- Toastify JS -->
  <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
  <script>
    let otpExpires = <%= otpExpires ? new Date(otpExpires).getTime() : 0 %>;
  
    let timerElement = document.getElementById("timer");
    let circle = document.querySelector('.timer-circle circle');
    let verifyBtn = document.getElementById("verifyBtn");
    let resendOtpForm = document.getElementById("resendOtpForm");
  
    if (otpExpires > 0) {
      let countdown = Math.floor((otpExpires - Date.now()) / 1000);
      let totalTime = countdown;
      
      function updateTimer() {
        if (countdown > 0) {
          timerElement.innerText = countdown;
          circle.style.strokeDashoffset = 283 - (283 * (totalTime - countdown) / totalTime);
          countdown--;
          setTimeout(updateTimer, 1000);
        } else {
          timerElement.innerText = "0";
          circle.style.strokeDashoffset = 283;
          verifyBtn.disabled = true;
          resendOtpForm.style.display = "block";
        }
      }
  
      updateTimer();
    } else {
      timerElement.innerText = "0";
      circle.style.strokeDashoffset = 283;
      verifyBtn.disabled = true;
      resendOtpForm.style.display = "block";
    }
  </script>
</body>
</html>