                        <h2 class="product-name display-4"><%= product.name %></h2>
                        <p class="product-price fs-3">₹<%= product.price.toFixed(2) %></p>
    
                        <% if (product.offer && product.offer > 0) { %>
                            <p>
                                <span style="text-decoration: line-through; color: red; font-size: 1.2em;">₹<%= product.price.toFixed(2) %></span>
                                <span style="font-weight: bold; color: green; font-size: 1.5em;"> ₹<%= (product.price - (product.price * product.offer / 100)).toFixed(2) %></span>
                                <small class="text-muted fs-6">(<%= product.offer %>% OFF)</small>
                            </p>
                        <% } %>
    
                        <p class="product-description"><strong>Description:</strong> <%= product.description %></p>
                        <p class="product-description">
                            <% if (product.stock === 0) { %>
                                <strong>Stock:</strong>
                                <p class="text-danger mt-2 fs-5">No stock available</p>
                            <% } else if (product.stock < 5) { %>
                                <p class="text-danger mt-2 fs-5"><strong class="text-dark">Stock:</strong> Only <%= product.stock %> left in stock!</p>
                            <% } %>
                        </p>                        
                        <div class="quantity-control mt-3">
                            <button class="btn btn-secondary circle-btn" id="reduce-quantity" onclick="updateQuantity('reduce')">-</button>
                            <input type="number" id="product-quantity" value="1" min="1" max="<%= product.stock %>" class="quantity-input form-control-sm" />
                            <button class="btn btn-secondary circle-btn" id="add-quantity" onclick="updateQuantity('add')">+</button>
                        </div>
                        <div class="rating mt-3">
                            <% let rating = product.rating || 4.5; %> <!-- Default to 4.5 if product.rating is not provided -->
                            <% for(let i = 1; i <= 5; i++) { %>
                                <% if(i <= Math.floor(rating)) { %>
                                    <i class="fas fa-star text-warning"></i> <!-- Filled Star -->
                                <% } else if(i - 0.5 === rating) { %>
                                    <i class="fas fa-star-half-alt text-warning"></i> <!-- Half Star -->
                                <% } else { %>
                                    <i class="far fa-star text-warning"></i> <!-- Empty Star -->
                                <% } %>
                            <% } %>
                            <span>(<%= rating %> / 5)</span> <!-- Show the rating value -->
                        </div>                                                                                                 
                        <button class="btn btn-primary rounded-pill px-5 py-3 mb-4" onclick="addToCart('<%= product._id %>')"><i class="fa fa-shopping-bag me-2"></i> Add to Cart</button>
                        <button class="btn btn-outline-secondary mt-3 ms-2" onclick="window.location.href='/shop'">Back to Products</button>
                    </div>
                </div>
            </div>
