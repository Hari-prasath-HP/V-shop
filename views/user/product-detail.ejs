<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Shop Dairy Products">
    <meta name="author" content="Vegishop">
    <link rel="icon" type="image/png" href="/public/img/logo.png">
    <title><%= product.name %> - Product Detail</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="vendor/icons/icofont.min.css" rel="stylesheet" type="text/css">
    <link href="/public/style.css" rel="stylesheet">
    <link href="vendor/sidebar/demo.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <style>
        .product-detail {
            padding: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        .product-detail img {
            height: 400px;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .product-detail img:hover {
            transform: scale(1.1);
        }

        .product-price {
            font-size: 24px;
            font-weight: bold;
            color: #2d6a4f;
        }

        .product-name {
            font-size: 28px;
            font-weight: 600;
        }

        .product-description {
            font-size: 16px;
        }

        .navbar {
            background: linear-gradient(90deg, #EB543B, #FBBF3B);
        }

        .btn-primary {
            background-color: #2d6a4f;
            border: none;
        }

        .btn-primary:hover {
            background-color: #1b4b35;
        }
        .product-image {
            width: 400px;
            height: 400px;
            object-fit: cover;
            transition: transform 0.3s ease;
        }
        .product-image:hover {
            transform: scale(1.2);
        }
        .product-card img {
        width: 100%; /* Make image take up the full width of the container */
        height: 200px; /* Set a fixed height for the images */
        object-fit: cover; /* Ensures the image covers the area without stretching */
        object-position: center; /* Ensures the image is centered if it's cropped */
        }
        .quantity-input {
    width: 60px;  /* Set a base width for the input */
    font-size: 18px;
    padding: 5px;
    text-align: center; /* Center the number inside the input */
    border-radius: 5px;
    border: 1px solid #ccc;
}

.quantity-input:focus {
    border-color: #2d6a4f; /* Change border color on focus */
    outline: none;
}

.quantity-input::-webkit-outer-spin-button,
.quantity-input::-webkit-inner-spin-button {
    -webkit-appearance: none;
    margin: 0;
}



</style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
            <a class="navbar-brand" href="/">
                <img class="img-fluid" src="/public/img/logo.png" alt="Vegishop Logo" style="max-height: 40px;">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item active">
                        <a class="nav-link text-white" href="/">Home</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link text-white" href="/shop">Products</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link text-white" href="#">Checkout</a>
                    </li>
                </ul>
                <ul class="navbar-nav ms-3">
                    <% if (username) { %>
                        <li class="nav-item">
                            <a href="/account" class="nav-link text-success">
                                <i class="icofont-user"></i> <%= username %>
                            </a>
                        </li>
                    <% } else { %>
                        <li class="nav-item">
                            <a href="/login" class="btn btn-success text-white">
                              <i class="icofont-login"></i> Login
                            </a>
                          </li>
                    <% } %>
                    <li class="nav-item">
                        <a href="/cart" class="nav-link text-success">
                            <i class="icofont-shopping-cart"></i> Cart
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <section class="py-5">
        <div class="container">
            <div class="row">
                <!-- Current Product -->
                <div class="col-md-6 mb-4">
                    <div id="product-carousel" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            <% product.imagePaths.forEach(function(image, index) { %>
                                <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                                    <img src="<%= image %>" alt="<%= product.name %>" class="d-block w-100 img-fluid product-image">
                                </div>
                            <% }); %>
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#product-carousel" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#product-carousel" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="product-detail">
                        <h2 class="product-name"><%= product.name %></h2>
                        <p class="product-price">₹<%= product.price.toFixed(2) %></p>
    
                        <% if (product.offer && product.offer > 0) { %>
                            <p>
                                <span style="text-decoration: line-through; color: red;">₹<%= product.price.toFixed(2) %></span>
                                <span style="font-weight: bold; color: green;"> ₹<%= (product.price - (product.price * product.offer / 100)).toFixed(2) %></span>
                                <small class="text-muted">(<%= product.offer %>% OFF)</small>
                            </p>
                        <% } %>
    
                        <p class="product-description"><strong>Description:</strong> <%= product.description %></p>
                        <p class="product-description">
                            <strong>Stock:</strong> 
                            <% if (product.stock === 0) { %>
                                No stock available
                            <% } else { %>
                                <%= product.stock %> available
                            <% } %>
                        </p>
                        <div class="quantity-control mt-3">
                            <button class="btn btn-secondary" id="reduce-quantity" onclick="updateQuantity('reduce')">-</button>
                            <input type="number" id="product-quantity" value="1" min="1" max="<%= product.stock %>" class="quantity-input" />
                            <button class="btn btn-secondary" id="add-quantity" onclick="updateQuantity('add')">+</button>
                        </div>
    
                        <button class="btn btn-success mt-2 w-100" onclick="addToCart('<%= product._id %>')">Add to Cart</button>
                        <button class="btn btn-outline-secondary mt-3 ms-2" onclick="window.location.href='/shop'">Back to Products</button>
                    </div>
                </div>
            </div>
    
            <!-- Related Products Section -->
            <div class="row">
                <% relatedProducts.forEach((relatedProduct, index) => { %>
                    <div class="col-md-6 col-lg-4">
                        <div class="product-card">
                            <!-- Carousel for each related product -->
                            <div id="related-product-carousel-<%= relatedProduct._id %>" class="carousel slide" data-bs-ride="carousel">
                                <div class="carousel-inner">
                                    <% relatedProduct.imagePaths.forEach((image, imageIndex) => { %>
                                        <div class="carousel-item <%= imageIndex === 0 ? 'active' : '' %>">
                                            <img src="<%= image %>" alt="<%= relatedProduct.name %>" class="d-block w-100 img-fluid" />
                                        </div>
                                    <% }); %>
                                </div>
                                <button class="carousel-control-prev" type="button" data-bs-target="#related-product-carousel-<%= relatedProduct._id %>" data-bs-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Previous</span>
                                </button>
                                <button class="carousel-control-next" type="button" data-bs-target="#related-product-carousel-<%= relatedProduct._id %>" data-bs-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Next</span>
                                </button>
                            </div>

                            <h4><%= relatedProduct.name %></h4>
                            <p class="product-price">
                                <span style="text-decoration: line-through; color: red;">₹<%= relatedProduct.price.toFixed(2) %></span>
                                <span style="font-weight: bold; color: green;"> ₹<%= (relatedProduct.price - (relatedProduct.price * relatedProduct.offer / 100)).toFixed(2) %></span>
                                <small class="text-muted">(<%= relatedProduct.offer %>% OFF)</small>
                            </p>
                            <button class="btn btn-primary" onclick="window.location.href='/product/<%= relatedProduct._id %>'">View Details</button>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </section>
    
    <footer class="bg-dark text-white py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <p>&copy; 2025 Vegishop. All rights reserved.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <a href="privacy.html" class="text-white mx-2">Privacy Policy</a>
                    <a href="terms.html" class="text-white mx-2">Terms of Service</a>
                </div>
            </div>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script> 
<script src="https://cdn.rawgit.com/elevateweb/elevatezoom/master/jquery.elevatezoom.js"></script>
<script>
    function addToCart(productId) {
      fetch('/check-login')
        .then(response => response.json())
        .then(data => {
          if (!data.isLoggedIn) {
            window.location.href = '/login';
          } else {
            const quantity = document.getElementById('product-quantity') ? document.getElementById('product-quantity').value : 1;
  
            fetch('/cart/add', {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({ productId, quantity })
            })
            .then(response => response.json())
            .then(result => {
              if (result.success) {
                alert('Product added to cart');
                window.location.href = '/cart';
              } else {
                alert(result.message);
              }
            });
          }
        });
    }
    function updateQuantity(action) {
        const quantityInput = document.getElementById("product-quantity");
        let currentQuantity = parseInt(quantityInput.value);
        const maxStock = parseInt(quantityInput.getAttribute("max"));
        if (action === 'add' && currentQuantity < maxStock) {
            quantityInput.value = currentQuantity + 1;
        } else if (action === 'reduce' && currentQuantity > 1) {
            quantityInput.value = currentQuantity - 1;
        }
    }
    function addToCart() {
        const quantity = document.getElementById("product-quantity").value;
        const productId = "<%= product._id %>";
        window.location.href = `/cart/add/${productId}?quantity=${quantity}`;
    }

    $(document).ready(function() {
        $('.product-image').elevateZoom({
            zoomType: "lens",
            lensShape: "round",
            lensSize: 200,
            scrollZoom: true
        });
    });
</script>

</body>

</html>
