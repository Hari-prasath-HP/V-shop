        /* Container for zoom effect */
.zoom-container {
    position: relative;
    overflow: hidden;
}

/* Style for the zoomed image */
.product-image {
    transition: transform 0.5s ease;
    width: 100%;
    height: 400px; /* Fixed height */
    object-fit: cover;
}
/* Zoom lens */
.zoom-lens {
    position: absolute;
    border: 1px solid #000;
    background-color: rgba(255, 255, 255, 0.4);
    display: none;
    cursor: pointer;
}

/* Zoom preview container */
.zoom-preview {
    position: absolute;
    top: 0;
    left: 100%;
    width: 400px;
    height: 400px;
    border: 1px solid #ddd;
    background-color: #fff;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
    overflow: hidden;
    display: none;
}

/* Preview image inside the preview container */
.zoom-preview img {
    position: absolute;
    width: auto;
    height: 100%;
}
