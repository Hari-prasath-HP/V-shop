<script>
document.querySelectorAll('.zoomable').forEach(img => {
  img.addEventListener('mousemove', function (event) {
    const zoomResult = this.nextElementSibling;
    zoomResult.style.display = 'block';

    const { left, top, width, height } = this.getBoundingClientRect();
    const x = ((event.pageX - left) / width) * 100;
    const y = ((event.pageY - top) / height) * 100;
    zoomResult.style.backgroundImage = `url(${this.dataset.zoomImage})`;
    zoomResult.style.backgroundPosition = `${x}% ${y}%`;
    const zoomBoxSize = 200;

    const offsetX = event.pageX - zoomBoxSize / 2;
    const offsetY = event.pageY - zoomBoxSize / 2;

    zoomResult.style.left = `${offsetX}px`;
    zoomResult.style.top = `${offsetY}px`;
  });

  img.addEventListener('mouseleave', function () {
    this.nextElementSibling.style.display = 'none';
  });
});

  </script>     
<script>
    function changeImage(index) {
        const carousel = document.getElementById('product-carousel');
        const carouselItems = carousel.querySelectorAll('.carousel-item');
        const totalItems = carouselItems.length;
        if (index >= 0 && index < totalItems) {
            const activeItem = carousel.querySelector('.carousel-item.active');
            if (activeItem) {
                activeItem.classList.remove('active');
            }
            carouselItems[index].classList.add('active');
        }
    }
</script>  
<script>
    function addToCart(productId) {
      fetch('/check-login')
        .then(response => response.json())
        .then(data => {
          if (!data.isLoggedIn) {
            window.location.href = '/login';
          } else {
            const quantity = document.getElementById('product-quantity') ? document.getElementById('product-quantity').value : 1;
            fetch('/cart/add', {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({ productId, quantity })
            })
            .then(response => response.json())
            .then(result => {
              if (result.success) {
                alert('Product added to cart');
                window.location.href = '/cart';
              } else {
                alert(result.message);
              }
            });
          }
        });
    }
    function updateQuantity(action) {
        const quantityInput = document.getElementById("product-quantity");
        let currentQuantity = parseInt(quantityInput.value);
        const maxStock = parseInt(quantityInput.getAttribute("max"));
        if (action === 'add' && currentQuantity < maxStock) {
            quantityInput.value = currentQuantity + 1;
        } else if (action === 'reduce' && currentQuantity > 1) {
            quantityInput.value = currentQuantity - 1;
        }
    }
    function addToCart() {
        const quantity = document.getElementById("product-quantity").value;
        const productId = "<%= product._id %>";
        window.location.href = `/cart/add/${productId}?quantity=${quantity}`;
    }

</script>

