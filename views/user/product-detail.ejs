      <section class="py-5">
        <div class="container">
            <div class="row">
                <!-- Current Product -->
                <div class="col-md-6 mb-4">
                    <div id="product-carousel" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            <% product.imagePaths.forEach(function(image, index) { %>
                                <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                                    <div class="zoom-container">
                                        <img src="<%= image %>" alt="<%= product.name %>" class="d-block w-100 img-fluid product-image" data-zoom-image="<%= image %>">
                                    </div>
                                </div>
                            <% }); %>
                        </div>                        
                        <!-- Main Image Carousel Controls -->
                        <button class="carousel-control-prev" type="button" data-bs-target="#product-carousel" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#product-carousel" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                
                        <!-- Thumbnails Below the Main Image -->
                        <div class="carousel-thumbnails mt-3 d-flex justify-content-center">
                            <% product.imagePaths.forEach(function(image, index) { %>
                                <div class="thumbnail-container mx-2">
                                    <img src="<%= image %>" alt="Thumbnail <%= index + 1 %>" class="img-thumbnail"
                                         style="width: 60px; height: 60px; cursor: pointer;"
                                         onclick="changeImage(<%= index %>)">
                                </div>
                            <% }); %>
                        </div>
                        
                    </div>
