<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/icofont@1.0.0/icofont.min.css">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark" style="height:10vh">
        <div class="container">
            <a class="navbar-brand" href="/">
                <h1>V-shop</h1>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
              <form class="d-flex me-3" onsubmit="return false;">
                <input class="form-control me-2" type="text" id="searchInput" placeholder="Search products..." onkeyup="searchProducts()">
            </form>
              <ul class="navbar-nav ms-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/" style="font-weight: bold; font-size: 22px;">
                      <!-- <i class="fas fa-home"></i> -->
                      Home
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/shop" style="font-weight: bold; font-size: 22px;">
                      <!-- <i class="fas fa-box"></i>  -->
                      Products
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/cart" class="nav-link" style="font-weight: bold; font-size: 22px;">
                      <i class="fas fa-shopping-cart"></i> 
                    </a>
                </li>
              </ul>                                 
              <ul class="navbar-nav">
                <% if (user) { %>  <!-- Check if user is logged in -->
                  <li class="nav-item">
                    <a href="/account" class="nav-link text-success" style="font-size: 22px;">
                      <i class="icofont-user"></i> <%= user.name || user.username %>
                    </a>
                  </li>
                  <!-- Show Signout button when the user is logged in -->
                  <li class="nav-item me-2">
                    <form action="/logout" method="POST">
                      <button type="submit" class="btn btn-danger text-white" style="font-size: 22px">
                        Signout
                      </button>
                    </form>
                  </li>
                <% } else { %>
                  <!-- Show Sign in button when the user is not logged in -->
                  <li class="nav-item me-2">
                    <a href="/login" class="btn btn-success text-white" style="font-size: 22px">
                      Sign in
                    </a>
                  </li>
                <% } %>
              </ul>
                             
            </div>
        </div>
    </nav>

<!-- Hero Section -->
<section class="hero" style="background-image: url('/uploads/image/bg-2.jpg'); background-size: cover; background-position: center; color: white; position: relative; height: 60vh;">
  <div class="overlay" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0, 0, 0, 0.4);"></div>
  <div class="container" style="position: relative; z-index: 2;">
      <h1 style="font-size: 1.75rem; font-weight: bold; text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.5); color: #ffffff;">Fresh Dairy Products Delivered to Your Doorstep</h1>
      <p style="font-size: 1rem; line-height: 1.6; font-weight: 600; text-shadow: 1px 1px 5px rgba(0, 0, 0, 0.3); color: #ffffff;">Browse our selection of the finest and freshest groceries at the best prices.</p>
      <h2 style="font-size: 1.5rem; font-weight: 800; text-shadow: 1px 1px 5px rgba(0, 0, 0, 0.3); color: #ffffff;">Daily Offers & Coupons Now Available</h2>
      <p style="font-size: 1rem;  font-weight: 800; text-shadow: 1px 1px 5px rgba(0, 0, 0, 0.3); margin-top: 20px; color: #ffffff;">Experience the convenience of shopping from home with exclusive discounts and amazing deals on all your favorite dairy products.</p>
      <a href="/shop" style="display: inline-block; margin-top: 20px; background-color: #ff8c00; color: white; padding: 10px 20px; font-size: 1.1rem; text-decoration: none; border-radius: 5px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); transition: background-color 0.3s ease;">Shop Now</a>
  </div>
</section>
    <!-- Category Section -->
    <section class="category-section py-5" style="background-color: #cfcdcd;">
        <div class="container">
            <h2 class="text-center mb-4">Explore Our Dairy Categories</h2>
            <div class="category-container">
                <% categories.forEach(category => { %>
                <div class="category">
                    <% if (category.image) { %>
                    <img src="<%= category.image %>" alt="<%= category.name %>">
                    <% } else { %>
                    <p>No image available</p>
                    <% } %>
                    <div class="category-content">
                        <h6><%= category.name %></h6>
                        <button class="shop-btn" onclick="window.location.href='/shop'">Shop Now</button>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    </section>

    <section class="py-5" style="background-color: #b5b5b5;">
      <div class="container">
        <h2 class="text-center mb-4">Offer's Today</h2>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4">
            <% 
              // Loop through topOfferProducts which are passed from the controller
              topOfferProducts.forEach(function(product) { 
            %>
            <div class="col-md-4 mb-4">
              <div class="card shadow-sm border-0 rounded product-card" style="background-color: #d6e6ed;">
                <div class="card-body text-center">
                  <h5 class="card-title text-truncate"><%= product.name %></h5>
                  
                  <div class="price-section">
                    <!-- Display original price and offer price -->
                    <span class="text-danger text-decoration-line-through fs-6">₹<%= product.price.toFixed(2) %></span>
                    <span class="text-success fw-bold fs-5"> ₹<%= (product.price - (product.price * product.offerPercentage / 100)).toFixed(2) %></span>
                    <small class="text-muted d-block">(<%= product.offerPercentage.toFixed(2) %>% OFF)</small>
                  </div>
              
                  <% if (product.imagePaths && product.imagePaths.length > 0) { %>
                    <div id="carousel-<%= product._id %>" class="carousel slide" data-bs-ride="carousel">
                      <div class="carousel-inner rounded">
                        <% product.imagePaths.forEach(function(image, index) { %>
                          <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                            <img src="<%= image %>" alt="<%= product.name %>" class="d-block w-100 rounded-top product-image">
                          </div>
                        <% }); %>
                      </div>
                      <button class="carousel-control-prev" type="button" data-bs-target="#carousel-<%= product._id %>" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon bg-dark rounded-circle p-2" aria-hidden="true"></span>
                      </button>
                      <button class="carousel-control-next" type="button" data-bs-target="#carousel-<%= product._id %>" data-bs-slide="next">
                        <span class="carousel-control-next-icon bg-dark rounded-circle p-2" aria-hidden="true"></span>
                      </button>
                    </div>
                  <% } else { %>
                    <p class="text-muted">No images available</p>
                  <% } %>
              
                  <button class="btn btn-primary mt-3 w-100" onclick="window.location.href='/product/<%= product._id %>'">View Product</button>
                </div>
              </div>
            </div>      
            <% }); %>
          </div>          
      </div>
    </section>
    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <p>&copy; 2025 Vegishop. All rights reserved.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <a href="privacy.html" class="text-white mx-2">Privacy Policy</a>
                    <a href="terms.html" class="text-white mx-2">Terms of Service</a>
                </div>
            </div>
        </div>
    </footer>
    <script>
      function searchProducts() {
          let input = document.getElementById("searchInput").value.toLowerCase();
          let productCards = document.querySelectorAll(".product-card");
  
          productCards.forEach((card) => {
              let productName = card.querySelector(".card-title").textContent.toLowerCase();
              if (productName.includes(input)) {
                  card.style.display = "block";
              } else {
                  card.style.display = "none";
              }
          });
      }
  </script>
  
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

